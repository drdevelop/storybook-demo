{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "jsx": "react",
    "lib": [
      "es5",
      "es2015",
      "es2017",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {}
  },
  "include": [
    "src"
  ]
}